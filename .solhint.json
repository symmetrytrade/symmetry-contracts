{
    "extends": "solhint:recommended",
    "plugins": ["prettier"],
    "rules": {
        "compiler-version": "off",
        "no-global-import": "off",
        "no-inline-assembly": "off",
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "prettier/prettier": "error",
        "not-rely-on-time": "off",
        "reason-string": "off",
        "no-empty-blocks": "off",
        "avoid-low-level-calls": "off"
    }
}
